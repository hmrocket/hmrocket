<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FC2355"
    tools:context="com.design.animation.MainActivity" >

    <Space
        android:id="@+id/space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <RelativeLayout
        android:id="@+id/frameLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@id/space"
        android:background="#33666666"
        android:elevation="2dp" >

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="@dimen/width_image"
            android:layout_height="@dimen/height_image"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:src="@drawable/ic_skin_conductance_blue" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/width_image"
            android:layout_height="@dimen/height_image"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:src="@drawable/ic_hrv_blue" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/width_image"
            android:layout_height="@dimen/height_image"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/imageView3"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:src="@drawable/ic_temperature_blue_full" />
    </RelativeLayout>

</RelativeLayout>